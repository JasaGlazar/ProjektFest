<Page x:Class="ProjektFest.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjektFest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage" Background="LightBlue">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button 
            x:Name="NalziStaroBtn"
            Content="Naloži staro prireditev" 
            Width="200" 
            Height="50"
            Margin="20"
            Background="White" Click="NalziStaroBtn_Click"/>
            <Button 
            x:Name="UstvariNovoBtn"
            Content="Ustvari novo prireditev" 
            Width="300" 
            Height="80"
            Margin="20"
            Background="White" Click="UstvariNovoBtn_Click"
                />
        </StackPanel>

    </Grid>
</Page>
